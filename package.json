{
  "name": "rails-partial",
  "displayName": "Rails Partial",
  "description": "Definition, Completion and CodeAction provider for Rails Partial.",
  "version": "0.3.4",
  "publisher": "aki77",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aki77/vscode-rails-partial.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aki77/vscode-rails-partial/issues"
  },
  "activationEvents": [
    "onLanguage:haml",
    "onLanguage:erb",
    "onLanguage:slim"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Rails Partial Configuration",
      "properties": {
        "railsPartial.viewFileExtensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "html.haml",
            "html.slim",
            "html.erb"
          ],
          "description": "This is the extension of the view files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.36.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.23.0",
    "typescript": "^5.2.2",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {}
}
